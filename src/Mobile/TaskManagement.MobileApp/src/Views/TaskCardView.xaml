<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TaskManagement.MobileApp.ViewModels"
             x:Class="TaskManagement.MobileApp.Views.TaskCardView"
             x:DataType="viewModels:TaskCardViewModel">

    <Border Style="{StaticResource CardBorderStyle}">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto"
              RowDefinitions="*,Auto"
              ColumnSpacing="8"
              RowSpacing="4"
              Padding="12,8">

            <Border Grid.Column="0"
                    Grid.RowSpan="2"
                    Style="{StaticResource AvatarBorderStyle}">
                <Label Text="{Binding CreatorInitial}"
                       Style="{StaticResource AvatarLabelStyle}" />
            </Border>

            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="0"
                                 Grid.RowSpan="2"
                                 VerticalOptions="Center">
                <Label Text="{Binding Title}"
                       Style="{StaticResource TitleLabelStyle}" />
                <Label Text="{Binding Subtitle}"
                       Style="{StaticResource SubtitleLabelStyle}"
                       TextColor="{Binding LinkedObjectType, Converter={StaticResource TypeToColorConverter}}" />
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalOptions="Center">
                <ImageButton Style="{StaticResource IconButtonStyle}" Source="edit_icon" Scale="0.6" />
                <ImageButton Style="{StaticResource IconButtonStyle}" Source="check_icon" Scale="0.7" />
            </HorizontalStackLayout>

            <Border Grid.Column="2"
                    Grid.Row="1"
                    Style="{StaticResource DateBorderStyle}">
                <Label Text="{Binding DueDate, StringFormat='{0:dd MMM yyyy}'}"
                       Style="{StaticResource DateLabelStyle}" />
            </Border>
        </Grid>
    </Border>
</ContentView>