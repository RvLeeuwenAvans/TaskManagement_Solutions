<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:TaskManagement.MobileApp.Views"
             xmlns:viewModels="clr-namespace:TaskManagement.MobileApp.ViewModels"
             x:Class="TaskManagement.MobileApp.Views.Pages.AddTaskPage"
             x:DataType="viewModels:AddTaskViewModel"
             BackgroundColor="{StaticResource LightGray}">
    <Shell.TitleView>
        <!-- todo: Make bindable -->
        <Label Text="Nieuwe taak"
               Style="{StaticResource NavHeaderLabel}" />
    </Shell.TitleView>
    <Grid RowDefinitions="Auto, Auto, *">
        <!-- just a spacer; has no use here besides looking pretty -->
        <BoxView Grid.Row="0" HeightRequest="20"
                 BackgroundColor="{StaticResource PrimaryDark}"
                 HorizontalOptions="FillAndExpand" />

        <views:TaskFormView Grid.Row="1"
                            BindingContext="{Binding FormViewModel}" />

        <Button Grid.Row="2"
                Text="Aanmaken"
                Style="{StaticResource PrimaryActionButton}"
                Command="{Binding CreateTaskCommand}" />
    </Grid>
</ContentPage>