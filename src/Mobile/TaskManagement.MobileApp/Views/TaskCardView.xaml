<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagement.MobileApp.Views.TaskCardView"
             x:Name="This">

    <Border Margin="16,8"
            Padding="0, 7"
            StrokeShape="RoundRectangle 8"
            BackgroundColor="White"
            Shadow="{Shadow Brush=#22000000, Offset='0,2', Radius=4}">

        <Grid ColumnDefinitions="Auto,*,Auto,Auto"
              RowDefinitions="*,Auto"
              ColumnSpacing="8"
              RowSpacing="4"
              Padding="12,8">

            <!-- Profile Image/Letter Circle -->
            <Border Grid.Column="0"
                    Grid.RowSpan="2"
                    HeightRequest="44"
                    WidthRequest="44"
                    StrokeShape="RoundRectangle 22"
                    BackgroundColor="#E1E1E1"
                    VerticalOptions="Center">
                <Label Text="{Binding IconLetter, Source={x:Reference This}}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Gray"
                       FontSize="22" />
            </Border>

            <!-- Title and object -->
            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="0"
                                 Grid.RowSpan="2"
                                 VerticalOptions="Center">
                <Label Text="{Binding Title, Source={x:Reference This}}"
                       FontSize="20"
                       TextColor="{StaticResource Black}"
                       VerticalTextAlignment="Center"
                       LineBreakMode="TailTruncation"
                       MaxLines="1" />
                <Label Text="{Binding Subtitle, Source={x:Reference This}}"
                       FontSize="17"
                       TextColor="#009951"
                       VerticalTextAlignment="Center"
                       LineBreakMode="TailTruncation"
                       MaxLines="1" />
            </VerticalStackLayout>

            <!-- Action Icons -->
            <HorizontalStackLayout Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalOptions="Center">
                <ImageButton Source="edit_icon.png"
                             HeightRequest="8"
                             WidthRequest="8"
                             Scale="0.6"
                             VerticalOptions="Center"
                             BackgroundColor="Transparent" />
                <ImageButton Source="check_icon.png"
                             HeightRequest="8"
                             WidthRequest="8"
                             Scale="0.7"
                             VerticalOptions="Center"
                             BackgroundColor="Transparent" />
            </HorizontalStackLayout>

            <!-- Date centered under icons -->
            <Border Grid.Column="2"
                    Grid.Row="1"
                    BackgroundColor="#EFE1B3"
                    StrokeShape="RoundRectangle 9"
                    HorizontalOptions="Center"
                    Padding="20,0">
                <Label Text="{Binding DateText, Source={x:Reference This}}"
                       FontSize="13"
                       FontAttributes="Bold"
                       TextColor="#B09969"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="Center" />
            </Border>
        </Grid>
    </Border>
</ContentView>
