<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:TaskManagement.MobileApp.Views"
             xmlns:viewModels="clr-namespace:TaskManagement.MobileApp.ViewModels"
             x:Class="TaskManagement.MobileApp.Views.Pages.AddTaskPage"
             x:DataType="viewModels:AddTaskViewModel"
             Title="Nieuwe taak"
             BackgroundColor="{StaticResource LightGray}">
    <Grid RowDefinitions="Auto, *, Auto">
        
        <BoxView HeightRequest="20"
                 BackgroundColor="{StaticResource PrimaryDark}"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="Start" />
        
        <views:TaskFormView Grid.Row="1"
                            BindingContext="{Binding FormViewModel}" />

        <Button Grid.Row="2"
                Text="Aanmaken"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                FontSize="18"
                FontAttributes="Bold"
                Margin="16,0,16,32"
                HeightRequest="50"
                CornerRadius="8"
                Command="{Binding CreateTaskCommand}" />
    </Grid>
</ContentPage>