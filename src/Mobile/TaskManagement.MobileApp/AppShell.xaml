<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskManagement.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TaskManagement.MobileApp.Views.Pages"
    BackgroundColor="{StaticResource Primary}"
    FlyoutBehavior="Disabled"
    Title="TaskManagement.MobileApp"
    TitleColor="{StaticResource White}"
    ForegroundColor="White">

    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddTaskPage}"
        Route="AddTaskPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:UpdateTaskPage}"
        Route="UpdateTaskPage" />
</Shell>
